---
interface Props {
  name: string;
  title: string;
  description: string;
  avatar: string;
  location?: string;
  socialLinks?: {
    inspirehep?: string;
    inspirehepIcon?: string;
    googleScholar?: string;
    googleScholarIcon?: string;
    orcid?: string;
    orcidIcon?: string;
  };
}

const { name, title, description, avatar, location, socialLinks } = Astro.props;
---

<section class="hero min-h-screen">
  <div class="hero-content flex-col lg:flex-row-reverse max-w-7xl gap-8">
    <div class="avatar">
      <div
        class="w-48 ring-primary ring-offset-base-100 rounded-full ring-2 ring-offset-2 overflow-hidden"
      >
        <img 
          src={avatar} 
          alt={name} 
          class="w-full h-full object-cover"
          loading="lazy"
        />
      </div>
    </div>
    <div class="max-w-2xl">
      <h1 class="text-5xl font-bold mb-4">Hi, I'm {name}</h1>
      <p class="text-xl text-base-content/80 mb-2">{title}</p>
      {location && <p class="text-base-content/60 mb-4">{location}</p>}
      <p class="text-lg leading-relaxed mb-6" set:html={description}></p>
      {
        socialLinks && (
          <div class="flex gap-4">
            {socialLinks.inspirehep && (
              <a
                href={socialLinks.inspirehep}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-circle btn-ghost"
                aria-label="INSPIRE-HEP"
              >
                {socialLinks.inspirehepIcon ? (
                  <img 
                    src={socialLinks.inspirehepIcon} 
                    alt="INSPIRE-HEP"
                    class="w-6 h-6 object-contain"
                  />
                ) : (
                  <span class="text-xs font-bold">IHP</span>
                )}
              </a>
            )}
            {socialLinks.googleScholar && (
              <a
                href={socialLinks.googleScholar}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-circle btn-ghost"
                aria-label="Google Scholar"
              >
                {socialLinks.googleScholarIcon ? (
                  <img 
                    src={socialLinks.googleScholarIcon} 
                    alt="Google Scholar"
                    class="w-6 h-6 object-contain"
                  />
                ) : (
                  <span class="text-xs font-bold">GS</span>
                )}
              </a>
            )}
            {socialLinks.orcid && (
              <a
                href={socialLinks.orcid}
                target="_blank"
                rel="noopener noreferrer"
                class="btn btn-circle btn-ghost"
                aria-label="ORCID"
              >
                {socialLinks.orcidIcon ? (
                  <img 
                    src={socialLinks.orcidIcon} 
                    alt="ORCID"
                    class="w-6 h-6 object-contain"
                  />
                ) : (
                  <span class="text-xs font-bold">OR</span>
                )}
              </a>
            )}
          </div>
        )
      }
    </div>
  </div>
</section>